{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

}
